<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. 首选品牌颜色 -->

        <!--标题栏的颜色-->
        <item name="colorPrimary">@color/colorMian</item>
        <!--定义状态栏的颜色-->
        <item name="colorPrimaryVariant">@color/colorMian</item>
        <!--暂不清楚其作用-->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color.状态栏颜色 ?attr/colorPrimaryVariant:表示使用上面的colorPrimaryVariant里的值-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/navigationColor</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>